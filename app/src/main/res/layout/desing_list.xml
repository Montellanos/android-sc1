<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_heigth"
        android:orientation="horizontal"
        android:contentDescription="@string/vestido"
        android:padding="@dimen/guideline"
        android:weightSum="100"
        android:background="@color/colorWhite"
        android:layout_marginTop="@dimen/guideline">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:id="@+id/miimage"
            android:contentDescription="@string/vestido"/>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="60"
            android:orientation="vertical"
            android:weightSum="100"
            android:layout_marginLeft="@dimen/guideline"
            android:layout_marginRight="@dimen/guideline">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="30"
                android:text="@string/name"
                android:textColor="@color/colorPrimaryDark"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="40"
                android:text="@string/skills"
                android:textSize="12sp"
                android:textColor="@color/colorBlack"
                android:gravity="center_vertical"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="30"
                android:text="@string/location"
                android:textStyle="italic"/>


        </LinearLayout>


        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:background="@drawable/icon_detail"
            android:id="@+id/vermas"/>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>